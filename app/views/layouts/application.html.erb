<!DOCTYPE html>
<html>
<head>
  <title>Tddblog</title>
  <link href='https://fonts.googleapis.com/css?family=EB+Garamond' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container" id="navbar-contain">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%if user_signed_in?%>
        <%= link_to friends_posts_path, id: 'brand' do %>
          <%= image_tag "tdd_blog_logo.png", class:'navbar-brand' %>
        <%end%>
      <% else %>
        <%= link_to root_path do %>
          <%= image_tag "tdd_blog_logo.png", class:'navbar-brand' %>
        <%end%>
      <%end%>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to 'Profile', user_path(current_user.id), class: "btn btn-small btn-primary"%></li>
          <li><%= link_to 'New Post', new_post_path, class: "btn btn-small btn-success"%></li>
          <li><%= link_to('Logout', destroy_user_session_path, class: "btn btn-small btn-warning", :method => :delete) %></li>
      </ul>
        <% else %>
          <li><%= link_to 'Login', new_user_session_path, class: "btn btn-small btn-primary" %></li>
          <li><%= link_to 'Signup', new_user_registration_path, class: "btn btn-small btn-success" %></li>
      </ul>
        <% end %>
    
    
    </div>
  </div> <!--container-->
</nav>
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
   <% elsif flash[:alert]%>
     <div class="alert"><%= flash[:alert] %></div>
<% end %>
<%= yield %>

</body>
</html>
