<section class="container">
<%=form_for @post, url: {action: "update"}, html: {class: "blog-title" } do |f| %>
  <div class="form-group" id="new-title">
    <%= f.label :title %>
    <%=f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group" id="new-content">
    <%= f.label :content %>
    <%=f.text_area :content, class: "wysihtml5 form-control" %> 
  </div>
  <div class="form-group">
   <%= f.submit "Submit", class:"btn btn-lg btn-success"%> 
  </div>
<%end%>

</section>

<section class="container">


<h4>Delete this post?</h4>
<%=link_to "Delete Post", post_path(@post), method: :delete, class: "btn btn-sm btn-danger",  data: { confirm: "Are you sure?", no_turbolink: true } %>

</section>
  
<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5({'toolbar': {'color': true, 'smallmodals': true }});
    });

  })
</script>