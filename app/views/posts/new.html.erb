<div class="container">
<%=form_for @post, url: {action: "create"}, html: {class: "blog-title" } do |f| %>
  <div class="form-group" id="new-title">
    <%= f.label :title %>
    <%=f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group" id="new-content">
    <%= f.label :content %>
    <%=f.text_area :content, class: "wysihtml5 form-control" %> 
  </div>
  <div class="form-group">
   <%= f.submit "Submit", class:"btn btn-lg btn-success"%> 
  </div>
<%end%>

</div>
  
<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>