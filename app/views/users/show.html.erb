<section class="container">
  <h1 class="text-center"><%=@user.email%> Profile Page</h1>
  
  <div class="row">
    <div class="col-sm-6 col-xs-12">
<%=image_tag @user.avatar(:medium), class: "profile" %>
      <div id ="following"> <!-- for Ajax-->
<%=render 'shared/follow' %>
      </div>
    </div>
    <div class="col-sm-6 col-xs-12">
      <% unless @posts ==nil %>
        <%=render 'shared/table' %>
      <% else %>
        <p>This user does not have any posts to display</p>
      <% end %>
    </div>
  </div>
  
</section>
