<section class="container">
   
   <% if user_signed_in? %>
     <%= form_tag("/users", method: "get", class: "form-group text-center") do %> 
       <%= text_field_tag(:q, "Search Users", class: "form-control search-form", style: "max-width:250px;") %>
       <%= submit_tag 'Search', class: "btn form-group" %>
     <% end %>
   <% end %>
   
  <div class= "row">        
    <% @users.each  do |user|%>
      <div class="col-xs-6 col-md-4">
        <%= link_to user_path(user.id), class: "thumb-link " do%>
          <%= image_tag user.avatar(:thumb), class: "img-circle thumb user-index" %>
        <%end%>
        <%= link_to user.full_name, user_path(user), class: "info-pad user-index-link" %>
      </div>
    
  <% end %>
  </div>
    
</section>