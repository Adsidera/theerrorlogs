<section class="container text-center">
  <h1 class="text-center">Change your Profile Photo</h1>
   <%= image_tag @user.avatar(:medium), id: "profile" %>
   </br>
   <i>Photo must be under 1MB</i>
   <%= form_for @user, html: { multipart: true } do |form| %>
  <%= form.file_field :avatar %>
  <%= form.submit 'Submit Image', class: "btn btn-primary", id:"submit-edit", data: { no_turbolink: true } %> 
<% end %>
   
</section>